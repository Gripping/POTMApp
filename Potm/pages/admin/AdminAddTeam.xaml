            </Label>
            <BoxView Style="{StaticResource linje}"/>
            
        <Grid HorizontalOptions="Center"
              VerticalOptions="Center"
              RowSpacing="0"
              Margin="0, -30, 0 ,0">
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition  Height="50"/>
            <RowDefinition  Height="40"/>
            <RowDefinition  Height="50"/>
            <RowDefinition  Height="40"/>
            <RowDefinition  Height="50"/>
            <RowDefinition  Height="50"/>
        </Grid.RowDefinitions>
                
        <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*"/>
                   

                </Grid.ColumnDefinitions>       

       <Label Grid.Row="0" Grid.Column="0" Margin="0, 30, 0, 0" Text="Sportsgren" Style="{StaticResource orangeText-sm}"/>                
        <Picker Grid.Row="1"
                Grid.Column="0"
                VerticalOptions="Center"
                HorizontalOptions="Center"
                HeightRequest="40"
                WidthRequest="320"
                Margin="-20, 0, 0, 0"
                SelectedIndex="1" > 

        <Picker.Items>
                      <x:String>hello</x:String>
                      <x:String>hello1</x:String>
                      <x:String>hello2</x:String>
                    </Picker.Items>
                </Picker>
        <Label Grid.Row="2" Grid.Column="0" Margin="0, 30, 0, 0" Text="Holdnavn" Style="{StaticResource orangeText-sm}"/>
        <Entry Grid.Row="3" Grid.Column="0" Margin="-20, 0, 0, 0" Style="{StaticResource textInput}"/>
                
        <Label Grid.Row="4" Grid.Column="0" Margin="0, 30, 0, 0" Text="Træner" Style="{StaticResource orangeText-sm}"/>        
        <Entry Grid.Row="5" Grid.Column="0"  Margin="-20, 0, 0, 0" Style="{StaticResource textInput}"/>
        <Label Grid.Row="6" Grid.Column="0" Margin="0, 30, 0, 0" Text="Sportsgren" Style="{StaticResource orangeText-sm}"/>                
        <Picker Grid.Row="7"
                Grid.Column="0"
                VerticalOptions="Center"
                HorizontalOptions="Center"
                HeightRequest="40"
                WidthRequest="320"
                Margin="-20, 0, 0, 0"
                SelectedIndex="1" > 

        <Picker.Items>
                      <x:String>hello</x:String>
                      <x:String>hello1</x:String>
                      <x:String>hello2</x:String>
                    </Picker.Items>
                </Picker>        
       

       
    </Grid>

           <Grid  HorizontalOptions="Center"
                   VerticalOptions="Center"
                   RowSpacing="0"
                   Margin="0, 20, 0 ,0"
                  
                  
                  >
                <Grid.RowDefinitions>
                    <RowDefinition />
                     
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="1*"/>
                </Grid.ColumnDefinitions>

                <Button Grid.Row="0"
                        Grid.Column="0"
                        HorizontalOptions="Center"
                        VerticalOptions="Center"
                        Text="DAMER"
                        TextColor="{StaticResource textBlack}"
                        FontFamily="Oswald"
                        BorderRadius="5"
                        BackgroundColor="{StaticResource textWhite}"
                        WidthRequest="100"
                        HeightRequest="24"
                        
                       
                        

                        />
                     <Button
                        Grid.Row="0"
                        Grid.Column="1"
                        HorizontalOptions="Center"
                        VerticalOptions="Center"
                        TextColor="{StaticResource textWhite}"
                        FontFamily="Oswald"
                        Text="MÆND"
                        BackgroundColor="{StaticResource orange}"
                        WidthRequest="100"
                        HeightRequest="24"
                        Margin="-20, 0 ,0 , 0"
                        />
                    
                    
           </Grid>
                <Grid Margin="0, 30, 0, 0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="1*"/>

                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition/>    
                    </Grid.RowDefinitions>
                    <Image Grid.Row="0" Grid.Column="0" Source="Images/StaticPicture.png"/>
                    <Label Margin="25, 35, 0, 0" 
                           Grid.Row="0" 
                           Grid.Column="0" 
                           Style="{DynamicResource orangeText-sm}" 
                           Text="INDSÆT BILLEDE" />
                    <StackLayout Grid.Row="0" 
                               Grid.Column="1">
                        <Label Style="{DynamicResource sm-info}" 
                               Text="UPLOAD HOLDLOGO"
                               Margin="0, 50 ,0 ,0"
                               />
