  ControlTemplate="{DynamicResource adminHome}">
  <ContentPage.Content>
    <StackLayout>
            
       <flv:FlowListView x:Name="flowListTest" FlowColumnCount="3" SeparatorVisibility="None" HasUnevenRows="false"
        FlowGroupDisplayBinding="{Binding name}" FlowRowBackgroundColor="Transparent" >

    <flv:FlowListView.FlowColumnTemplate>
        <DataTemplate>
                         <Grid HorizontalOptions="FillAndExpand"
                               VerticalOptions="FillAndExpand">
                        <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="1*"/>
                                <ColumnDefinition Width="4*"/>
                                <ColumnDefinition Width="1*"/>
                            </Grid.ColumnDefinitions>

                        <Grid.RowDefinitions>
                                <RowDefinition Height=""/>
                                <RowDefinition/>
                            </Grid.RowDefinitions>
                        </Grid>
            <Label TextColor="{StaticResource textBlack}" HorizontalOptions="Fill" VerticalOptions="Fill" 
                XAlign="Center" YAlign="Center" Text="{Binding name}"/>
        </DataTemplate>
    </flv:FlowListView.FlowColumnTemplate>

</flv:FlowListView>

