            <Viewbox>
                <Image Source="http://lorempixel.com/400/600/" />
            </Viewbox>
            <Viewbox>
                <Image Source="http://lorempixel.com/700/700/" />
            </Viewbox>
            <Viewbox>
                <Image Source="http://lorempixel.com/100/300/" />
            </Viewbox>
            <Viewbox>
